                        </TextBlock>
                    </StackPanel>

                    <Rectangle Fill="#444444" Width="250" Height="450" Grid.Row="3" Grid.RowSpan="3"></Rectangle>
                    <StackPanel Grid.Row="4" x:Name="artikal4" Tapped="artikal4_Tapped">
                        <Rectangle Width="230" Height="150" VerticalAlignment="Top">
                            <Rectangle.Fill>
