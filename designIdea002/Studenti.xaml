                        <GradientStop Offset="0" />
                        <GradientStop Color="Black" Offset="1" />
                    </LinearGradientBrush>
                </Rectangle.Fill>
            </Rectangle>
            <StackPanel Orientation="Vertical" Grid.Row="2" Grid.Column="0" Width="1500">
                <Grid Margin="0,100,0,0">
                    
