                    <ColumnDefinition Width="250"></ColumnDefinition> 
                    <ColumnDefinition Width="10"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="ArtikliLevo">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="390"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="340"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>
                    
                    <Rectangle Fill="#444444" Width="250" Height="400" Grid.Row="0" Grid.RowSpan="2"></Rectangle>
                    <StackPanel Grid.Row="1" x:Name="artikal1" Tapped="artikal1_Tapped">
                    <Rectangle Width="230" Height="150" VerticalAlignment="Top">
                        <Rectangle.Fill>
                            <ImageBrush ImageSource="{Binding MalaSlika}"></ImageBrush>
                        </Rectangle.Fill>
                    </Rectangle>
                        <TextBlock Width="230" TextWrapping="Wrap" FontSize="30" Margin="0,20,0,30" FontWeight="Light" Text="{Binding Naslov}"></TextBlock>
                        <TextBlock Width="230" TextWrapping="Wrap" FontSize="20" FontWeight="Light" Text="{Binding Opis}">
                    </TextBlock>
                    </StackPanel>
                    
                    <Rectangle Fill="#444444" Width="250" Height="360" Grid.Row="3" Grid.RowSpan="3"></Rectangle>
                    <StackPanel Grid.Row="4" x:Name="artikal2" Tapped="artikal2_Tapped">
                        <Rectangle Width="230" Height="150" VerticalAlignment="Top">
                            <Rectangle.Fill>
                                <ImageBrush ImageSource="{Binding MalaSlika}"></ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                        <TextBlock Width="230" TextWrapping="Wrap" FontSize="30" Margin="0,20,0,30" FontWeight="Light" Text="{Binding Naslov}"></TextBlock>
                        <TextBlock Width="230" TextWrapping="Wrap" FontSize="20" FontWeight="Light" Text="{Binding Opis}">
                        </TextBlock>
                    </StackPanel>
                </Grid>

                <Grid Grid.Column="2" Grid.Row="0" VerticalAlignment="Top" HorizontalAlignment="Center" x:Name="ArtikliDesno">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="300"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                        <RowDefinition Height="430"></RowDefinition>
                        <RowDefinition Height="10"></RowDefinition>
                    </Grid.RowDefinitions>

                    <Rectangle Fill="#444444" Width="250" Height="310" Grid.Row="0" Grid.RowSpan="2"></Rectangle>
