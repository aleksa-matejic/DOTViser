                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                    <Border Background="Black" Opacity="0.7" Grid.RowSpan="2"></Border>
                    
                    <TextBlock Grid.Row="0" FontSize="70" Margin="2,2,0,0"  FontWeight="SemiBold" Width="700" TextWrapping="Wrap" Foreground="Black" Text="{Binding Naslov}"/>
