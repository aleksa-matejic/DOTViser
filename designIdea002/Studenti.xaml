            <RichTextBlockOverflow Grid.Column="6" Grid.Row="1" Grid.RowSpan="2" Margin="0,0,0,50" x:Name="overflow2"></RichTextBlockOverflow>
            <!--/DRUGA-->

            <!--TRECA-->
            <TextBlock Grid.Column="9" Grid.Row="0" FontSize="20" FontWeight="Black" VerticalAlignment="Bottom">POKRENI SE</TextBlock>
            <Grid Grid.Column="9" Grid.Row="1" Margin="0,20,0,0" Background="#444444">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                    <ColumnDefinition Width="50"></ColumnDefinition>
                    <ColumnDefinition Width="250"></ColumnDefinition>
                    <ColumnDefinition Width="20"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="20"></RowDefinition>
                    <RowDefinition Height="200"></RowDefinition>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition Height="70"></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#777777"></Border>
                <Border Grid.Column="1" Grid.Row="3" Grid.ColumnSpan="2" BorderThickness="0,1,0,0" BorderBrush="#777777"></Border>
                <TextBlock TextWrapping="Wrap" Width="280" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" FontSize="30" FontWeight="Light" x:Name="infoWork" Tapped="infoWork_Tapped">
                    Prati prezentaciju nasih studenata i njihovih dostignuca. Neka te ona inspirisu da se pokrenes!
                </TextBlock>

                <Viewbox MaxHeight="35" MaxWidth="35" Grid.Column="1" Grid.Row="2" Margin="0,10,0,0" VerticalAlignment="Top">
                    <SymbolIcon Symbol="57704" />
                </Viewbox>
                <TextBlock TextWrapping="Wrap" Width="250"
                           Grid.Column="2" Grid.Row="2" FontSize="15" FontWeight="Light"
                           Margin="0,10,0,0" VerticalAlignment="Top">
                    Za savete i vise informacija o njihovim radovima kontaktiraj mejlom kolegu! 
                </TextBlock>
                <Viewbox MaxHeight="35" MaxWidth="35" Grid.Column="1" Grid.Row="3" Margin="0,10,0,0" VerticalAlignment="Top">
                    <SymbolIcon Symbol="57826" />
                </Viewbox>
                <TextBlock TextWrapping="Wrap" Width="250"
                           Grid.Column="2" Grid.Row="3" FontSize="15" FontWeight="Light"
                           Margin="0,10,0,0" VerticalAlignment="Top">
                    Ako mislis da mozes da pomognes kolegama ili zelis da promovises svoj rad pusti nam mejl! 
                </TextBlock>
            </Grid>
